# Groww API Configuration (TOTP Auto-Refresh - NO DAILY RENEWAL!)
# Get your API Key and Secret from: https://groww.in/user/profile/trading-apis
# Choose "API Key & Secret" option for TOTP authentication
# Pricing: ₹499 + taxes per month
REACT_APP_GROWW_API_KEY=your_groww_api_key_here
REACT_APP_GROWW_API_SECRET=your_groww_api_secret_here

# Fallback Manual Token (Optional - for testing or if TOTP fails)
# This expires daily at 6:00 AM, but TOTP method above eliminates daily renewals
# REACT_APP_GROWW_ACCESS_TOKEN=your_manual_access_token_here

# API Configuration
REACT_APP_ENABLE_API_LOGGING=true
REACT_APP_CACHE_DURATION=15000

# AI Assistant Configuration
REACT_APP_OPENAI_API_KEY=your_openai_api_key_here

# Google Custom Search API (Required for web search)
# API Key: Get from Google Cloud Console → APIs & Services → Credentials
# Search Engine ID: Get from https://cse.google.com/cse/
REACT_APP_GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
REACT_APP_GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Note: Google Custom Search provides 100 free queries per day
# Additional queries cost $5 per 1000 queries